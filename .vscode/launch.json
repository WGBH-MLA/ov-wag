{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "numWorkers",
            "type": "promptString",
            "default": "4",
            "description": "Number of Gunicorn workers to run"
        }
    ],
    "configurations": [
        {
            "name": "OV Wagtail - Django dev server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "python": "${workspaceFolder}/venv/bin/python",
            "args": [
                "runserver",
                "0.0.0.0:8001"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "OV Wagtail - Gunicorn",
            "type": "python",
            "request": "launch",
            "program": "gunicorn",
            // "python": "${workspaceFolder}/venv/bin/python",
            "args": [
                "-w ${input:numWorkers}",
                "-b 0.0.0.0:4000",
                "ov-wag.wsgi:applications",
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Run Migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "python": "${workspaceFolder}/venv/bin/python",
            "args": [
                "migrate",
                "--noinput"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "python": "${workspaceFolder}/venv/bin/python",
            "args": [
                "test",
            ],
            "django": true,
            "justMyCode": false
        },
    ]
}