    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "python": "${workspaceFolder}/venv/bin/python",
            "args": [
                "runserver",
                "0.0.0.0:8001"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Django Migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "python": "${workspaceFolder}/venv/bin/python",
            "args": [
                "migrate",
                "--noinput"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Django Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "python": "${workspaceFolder}/venv/bin/python",
            "args": [
                "test",
            ],
            "django": true,
            "justMyCode": false
        },
    ]
}